{
  "name": "vscode-voice-doc",
  "displayName": "Voice Documentation Plugin",
  "description": "KI-gest√ºtzte Code-Dokumentation per Spracheingabe",
  "version": "0.0.1",
  "publisher": "azad-ahmed",
  "repository": {
    "type": "git",
    "url": "https://github.com/azad-ahmed/vscode-voice-doc-plugin.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Programming Languages", "Other"],
  "activationEvents": [
    "onCommand:voiceDoc.startRecording",
    "onCommand:voiceDoc.stopRecording",
    "onCommand:voiceDoc.configure"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceDoc.startRecording",
        "title": "Voice Doc: Start Recording",
        "icon": "$(record)"
      },
      {
        "command": "voiceDoc.stopRecording",
        "title": "Voice Doc: Stop Recording",
        "icon": "$(stop)"
      },
      {
        "command": "voiceDoc.configure",
        "title": "Voice Doc: Configure Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "Voice Documentation",
      "properties": {
        "voiceDoc.speechService": {
          "type": "string",
          "default": "azure",
          "enum": ["azure", "google", "whisper"],
          "description": "Speech-to-Text Service Provider"
        },
        "voiceDoc.language": {
          "type": "string",
          "default": "de-DE",
          "enum": ["de-DE", "en-US"],
          "description": "Language for speech recognition"
        },
        "voiceDoc.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Speech Service (stored securely)"
        }
      }
    },
    "keybindings": [
      {
        "command": "voiceDoc.startRecording",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "node-record-lpcm16": "^1.0.1",
    "axios": "^1.4.0"
  }
}