{
  "name": "vscode-voice-doc-plugin",
  "displayName": "Voice Documentation Plugin",
  "description": "KI-gestützte Code-Dokumentation per Spracheingabe",
  "version": "1.0.0",
  "publisher": "azad-ahmed",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "voice",
    "documentation",
    "comments",
    "speech",
    "ai",
    "openai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceDocPlugin.toggleRecording",
        "title": "Voice Doc: Aufnahme starten/stoppen",
        "icon": "$(mic)"
      },
      {
        "command": "voiceDocPlugin.startRecording",
        "title": "Voice Doc: Aufnahme starten",
        "icon": "$(record)"
      },
      {
        "command": "voiceDocPlugin.stopRecording",
        "title": "Voice Doc: Aufnahme stoppen",
        "icon": "$(stop)"
      },
      {
        "command": "voiceDocPlugin.convertToComment",
        "title": "Voice Doc: Text zu Kommentar konvertieren",
        "icon": "$(comment)"
      },
      {
        "command": "voiceDocPlugin.insertFromClipboard",
        "title": "Voice Doc: Kommentar aus Zwischenablage",
        "icon": "$(clippy)"
      },
      {
        "command": "voiceDocPlugin.configureOpenAI",
        "title": "Voice Doc: OpenAI API Key konfigurieren",
        "icon": "$(key)"
      },
      {
        "command": "voiceDocPlugin.test",
        "title": "Voice Doc: Test-Funktionen",
        "icon": "$(beaker)"
      }
    ],
    "keybindings": [
      {
        "command": "voiceDocPlugin.toggleRecording",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "voiceDocPlugin.convertToComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "voiceDocPlugin.toggleRecording",
          "group": "voiceDoc@1",
          "when": "editorTextFocus"
        },
        {
          "command": "voiceDocPlugin.convertToComment",
          "group": "voiceDoc@2",
          "when": "editorHasSelection"
        },
        {
          "command": "voiceDocPlugin.insertFromClipboard",
          "group": "voiceDoc@3",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Voice Documentation Plugin",
      "properties": {
        "voiceDocPlugin.openAIApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key für GPT",
          "markdownDescription": "Erhalten Sie Ihren API Key unter [platform.openai.com](https://platform.openai.com/api-keys)"
        },
        "voiceDocPlugin.language": {
          "type": "string",
          "default": "de-DE",
          "enum": [
            "de-DE",
            "en-US",
            "en-GB"
          ],
          "description": "Sprache für die Spracherkennung"
        },
        "voiceDocPlugin.multilineThreshold": {
          "type": "number",
          "default": 80,
          "minimum": 40,
          "maximum": 200,
          "description": "Zeichenanzahl ab der mehrzeilige Kommentare verwendet werden"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "start": "code --extensionDevelopmentPath=.",
    "debug": "npm run compile && code --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "rimraf": "^6.0.1",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azad-ahmed/vscode-voice-doc-plugin.git"
  },
  "license": "MIT"
}
