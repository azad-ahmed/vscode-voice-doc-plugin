{
  "name": "vscode-voice-doc-plugin",
  "displayName": "Voice Documentation Plugin",
  "description": "KI-gestützte Code-Dokumentation per Spracheingabe - Diplomarbeit Projekt",
  "version": "1.1.0",
  "publisher": "azad-ahmed",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "voice",
    "documentation",
    "comments",
    "speech",
    "ai",
    "openai",
    "azure",
    "whisper",
    "speech-to-text",
    "auto-mode",
    "learning",
    "code-analysis",
    "ast-parser",
    "intelligent-placement",
    "security-hardened"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceDocPlugin.toggleRecording",
        "title": "Voice Doc: Aufnahme starten/stoppen",
        "icon": "$(mic)"
      },
      {
        "command": "voiceDocPlugin.convertToComment",
        "title": "Voice Doc: Text zu Kommentar konvertieren",
        "icon": "$(comment)"
      },
      {
        "command": "voiceDocPlugin.insertFromClipboard",
        "title": "Voice Doc: Kommentar aus Zwischenablage",
        "icon": "$(clippy)"
      },
      {
        "command": "voiceDocPlugin.configureOpenAI",
        "title": "Voice Doc: OpenAI API Key konfigurieren",
        "icon": "$(key)"
      },
      {
        "command": "voiceDocPlugin.configureAzure",
        "title": "Voice Doc: Azure konfigurieren",
        "icon": "$(cloud)"
      },
      {
        "command": "voiceDocPlugin.showUsageStats",
        "title": "Voice Doc: API-Nutzung anzeigen",
        "icon": "$(graph)"
      },
      {
        "command": "voiceDocPlugin.toggleAutoMode",
        "title": "Voice Doc: Auto-Modus umschalten (Projekt-Überwachung)",
        "icon": "$(eye)"
      },
      {
        "command": "voiceDocPlugin.analyzeCurrentFunction",
        "title": "Voice Doc: Aktuelle Funktion analysieren",
        "icon": "$(search)"
      },
      {
        "command": "voiceDocPlugin.showStatistics",
        "title": "Voice Doc: Lern-Statistiken anzeigen",
        "icon": "$(graph-line)"
      },
      {
        "command": "voiceDocPlugin.trainFromFeedback",
        "title": "Voice Doc: Aus Feedback lernen",
        "icon": "$(mortar-board)"
      },
      {
        "command": "voiceDocPlugin.showDemoTutorial",
        "title": "Voice Doc: Demo-Tutorial anzeigen",
        "icon": "$(mortar-board)"
      },
      {
        "command": "voiceDocPlugin.showDemoStats",
        "title": "Voice Doc: Demo-Statistiken anzeigen",
        "icon": "$(graph)"
      },
      {
        "command": "voiceDocPlugin.toggleDemoMode",
        "title": "Voice Doc: Demo-Modus umschalten",
        "icon": "$(debug-start)"
      },
      {
        "command": "voiceDocPlugin.toggleAutoComment",
        "title": "Voice Doc: Auto-Kommentierung umschalten",
        "icon": "$(robot)"
      },
      {
        "command": "voiceDocPlugin.analyzeCurrentFile",
        "title": "Voice Doc: Aktuelle Datei analysieren",
        "icon": "$(search)"
      },
      {
        "command": "voiceDocPlugin.analyzeCommentPlacement",
        "title": "Voice Doc: Kommentar-Platzierung analysieren (Claude AI)",
        "icon": "$(search)"
      },
      {
        "command": "voiceDocPlugin.analyzeCodeStructure",
        "title": "Voice Doc: Code-Struktur analysieren (AST)",
        "icon": "$(symbol-structure)"
      }
    ],
    "keybindings": [
      {
        "command": "voiceDocPlugin.toggleRecording",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "voiceDocPlugin.convertToComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorHasSelection"
      },
      {
        "command": "voiceDocPlugin.toggleAutoMode",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "voiceDocPlugin.analyzeCodeStructure",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "voiceDocPlugin.toggleRecording",
          "group": "navigation",
          "when": "editorIsOpen"
        },
        {
          "command": "voiceDocPlugin.toggleAutoMode",
          "group": "navigation",
          "when": "editorIsOpen"
        }
      ],
      "editor/context": [
        {
          "command": "voiceDocPlugin.toggleRecording",
          "group": "voiceDoc@1",
          "when": "editorTextFocus"
        },
        {
          "command": "voiceDocPlugin.convertToComment",
          "group": "voiceDoc@2",
          "when": "editorHasSelection"
        },
        {
          "command": "voiceDocPlugin.analyzeCurrentFunction",
          "group": "voiceDoc@3",
          "when": "editorTextFocus"
        },
        {
          "command": "voiceDocPlugin.analyzeCodeStructure",
          "group": "voiceDoc@4",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Voice Documentation Plugin",
      "properties": {
        "voiceDocPlugin.sttProvider": {
          "type": "string",
          "default": "auto",
          "enum": [
            "openai",
            "azure",
            "auto"
          ],
          "enumDescriptions": [
            "OpenAI Whisper API (empfohlen)",
            "Azure Cognitive Services",
            "Automatisch besten Provider wählen"
          ],
          "description": "Speech-to-Text Provider"
        },
        "voiceDocPlugin.azureRegion": {
          "type": "string",
          "default": "westeurope",
          "enum": [
            "westeurope",
            "northeurope",
            "eastus",
            "westus2",
            "southeastasia"
          ],
          "description": "Azure Region für Cognitive Services"
        },
        "voiceDocPlugin.language": {
          "type": "string",
          "default": "de-DE",
          "enum": [
            "de-DE",
            "en-US",
            "en-GB",
            "fr-FR",
            "es-ES",
            "it-IT",
            "pt-PT"
          ],
          "description": "Sprache für Spracherkennung"
        },
        "voiceDocPlugin.autoMode": {
          "type": "boolean",
          "default": false,
          "description": "Automatische Code-Analyse aktivieren"
        },
        "voiceDocPlugin.minConfidence": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimale Konfidenz für automatische Dokumentationsvorschläge (0-1)"
        },
        "voiceDocPlugin.learningEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Lern-System aktivieren - Plugin lernt aus Feedback"
        },
        "voiceDocPlugin.commentStyle": {
          "type": "string",
          "default": "JSDoc",
          "enum": [
            "JSDoc",
            "Standard",
            "Inline"
          ],
          "description": "Stil der generierten Kommentare"
        },
        "voiceDocPlugin.autoCommentMode": {
          "type": "string",
          "default": "off",
          "enum": [
            "off",
            "on-save",
            "on-type"
          ],
          "enumDescriptions": [
            "Auto-Kommentierung deaktiviert",
            "Kommentare beim Speichern hinzufügen",
            "Kommentare während des Tippens hinzufügen"
          ],
          "description": "Auto-Kommentierungs-Modus"
        },
        "voiceDocPlugin.toggleAutoComment": {
          "type": "boolean",
          "default": false,
          "description": "Auto-Kommentierung aktiviert"
        },
        "voiceDocPlugin.intelligentPlacement": {
          "type": "boolean",
          "default": true,
          "description": "AST-basierte intelligente Kommentar-Platzierung aktivieren"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:tests": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile:tests",
    "test": "node ./out/test/runTest.js",
    "test:unit": "npm run pretest && mocha ./out/test/unit/**/*.test.js",
    "lint": "eslint src --ext ts",
    "security-audit": "npm audit && npm outdated",
    "fix:install": "node install-fixes.js",
    "fix:validate": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/core-auth": "^1.5.0",
    "@typescript-eslint/types": "^8.14.0",
    "@typescript-eslint/typescript-estree": "^8.14.0",
    "axios": "^1.12.2",
    "form-data": "^4.0.4",
    "microsoft-cognitiveservices-speech-sdk": "^1.46.0"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.1.0",
    "mocha": "^10.8.2",
    "sinon": "^21.0.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azad-ahmed/vscode-voice-doc-plugin.git"
  },
  "license": "MIT",
  "author": {
    "name": "Azad Ahmed"
  }
}
