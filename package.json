{
  "name": "vscode-voice-doc-plugin",
  "displayName": "Voice Documentation with AI",
  "description": "KI-gestützte Code-Dokumentation per Spracheingabe - verwandelt gesprochene Erklärungen automatisch in professionelle Code-Kommentare",
  "version": "1.0.0",
  "publisher": "azad-ahmed",
  "author": {
    "name": "Azad Ahmed",
    "email": "your-email@example.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azad-ahmed/vscode-voice-doc-plugin.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "voice",
    "speech",
    "documentation",
    "comments",
    "AI",
    "ChatGPT",
    "Claude",
    "German",
    "JSDoc"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceDocs.toggleRecording",
        "title": "Voice Docs: Sprachdokumentation starten",
        "category": "Voice Documentation",
        "icon": "$(mic)"
      },
      {
        "command": "voiceDocs.quickInput",
        "title": "Voice Docs: Text direkt eingeben",
        "category": "Voice Documentation",
        "icon": "$(keyboard)"
      },
      {
        "command": "voiceDocs.multiStep",
        "title": "Voice Docs: Strukturierte Eingabe",
        "category": "Voice Documentation",
        "icon": "$(checklist)"
      },
      {
        "command": "voiceDocs.clipboard",
        "title": "Voice Docs: Clipboard-Methode",
        "category": "Voice Documentation",
        "icon": "$(clippy)"
      },
      {
        "command": "voiceDocs.systemVoice",
        "title": "Voice Docs: System-Spracherkennung",
        "category": "Voice Documentation",
        "icon": "$(unmute)"
      },
      {
        "command": "voiceDocs.enhanceText",
        "title": "Voice Docs: Ausgewählten Text mit AI verbessern",
        "category": "Voice Documentation",
        "icon": "$(sparkle)"
      },
      {
        "command": "voiceDocs.configureOpenAI",
        "title": "Voice Docs: OpenAI API Key konfigurieren",
        "category": "Voice Documentation",
        "icon": "$(key)"
      },
      {
        "command": "voiceDocs.configureAnthropic",
        "title": "Voice Docs: Anthropic/Claude API Key konfigurieren",
        "category": "Voice Documentation",
        "icon": "$(key)"
      },
      {
        "command": "voiceDocs.testOpenAI",
        "title": "Voice Docs: OpenAI API Key testen",
        "category": "Voice Documentation",
        "icon": "$(testing-passed-icon)"
      },
      {
        "command": "voiceDocs.testAnthropic",
        "title": "Voice Docs: Anthropic API Key testen",
        "category": "Voice Documentation",
        "icon": "$(testing-passed-icon)"
      },
      {
        "command": "voiceDocs.testAllKeys",
        "title": "Voice Docs: Alle API Keys testen",
        "category": "Voice Documentation",
        "icon": "$(beaker)"
      },
      {
        "command": "voiceDocs.validateComment",
        "title": "Voice Docs: Kommentar-Qualität prüfen",
        "category": "Voice Documentation"
      },
      {
        "command": "voiceDocs.selectProvider",
        "title": "Voice Docs: AI Provider auswählen",
        "category": "Voice Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "voiceDocs.toggleRecording",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "voiceDocs.enhanceText",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "voiceDocs.testAllKeys",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "voiceDocs.addCommentHere",
          "group": "voiceDocs@1",
          "when": "editorTextFocus"
        },
        {
          "command": "voiceDocs.enhanceText",
          "group": "voiceDocs@2",
          "when": "editorHasSelection"
        }
      ],
      "editor/title": [
        {
          "command": "voiceDocs.startVoice",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "voiceDocs.startVoice",
          "when": "editorIsOpen"
        },
        {
          "command": "voiceDocs.stopVoice",
          "when": "editorIsOpen"
        },
        {
          "command": "voiceDocs.enhanceText",
          "when": "editorHasSelection"
        },
        {
          "command": "voiceDocs.validateComment"
        },
        {
          "command": "voiceDocs.selectProvider"
        },
        {
          "command": "voiceDocs.configureOpenAI"
        },
        {
          "command": "voiceDocs.configureAnthropic"
        }
      ]
    },
    "configuration": {
      "title": "Voice Documentation",
      "properties": {
        "voiceDocs.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "none"
          ],
          "default": "openai",
          "description": "Welcher AI-Provider soll für die Textverbesserung verwendet werden?",
          "enumDescriptions": [
            "OpenAI GPT (ChatGPT)",
            "Anthropic Claude",
            "Keine AI-Verbesserung (nur Basis-Textverarbeitung)"
          ]
        },
        "voiceDocs.openaiModel": {
          "type": "string",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "default": "gpt-4o-mini",
          "description": "OpenAI Modell für die Textverbesserung"
        },
        "voiceDocs.anthropicModel": {
          "type": "string",
          "enum": [
            "claude-3-opus-20240229",
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307"
          ],
          "default": "claude-3-haiku-20240307",
          "description": "Anthropic Claude Modell für die Textverbesserung"
        },
        "voiceDocs.language": {
          "type": "string",
          "enum": [
            "de-DE",
            "en-US",
            "en-GB",
            "fr-FR",
            "es-ES"
          ],
          "default": "de-DE",
          "description": "Sprache für die Spracherkennung",
          "enumDescriptions": [
            "Deutsch (Deutschland)",
            "English (US)",
            "English (UK)",
            "Français",
            "Español"
          ]
        },
        "voiceDocs.autoInsert": {
          "type": "boolean",
          "default": true,
          "description": "Kommentare automatisch an der richtigen Stelle im Code einfügen"
        },
        "voiceDocs.serverPort": {
          "type": "number",
          "default": 9000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "HTTP Port für den lokalen Voice Server"
        },
        "voiceDocs.websocketPort": {
          "type": "number",
          "default": 9001,
          "minimum": 1024,
          "maximum": 65535,
          "description": "WebSocket Port für die Echtzeitkommunikation"
        },
        "voiceDocs.debounceDelay": {
          "type": "number",
          "default": 200,
          "minimum": 100,
          "maximum": 1000,
          "description": "Verzögerung für Code-Kontext-Tracking in Millisekunden"
        },
        "voiceDocs.maxCommentLength": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Maximale Länge eines generierten Kommentars in Zeichen"
        },
        "voiceDocs.removeFillerWords": {
          "type": "boolean",
          "default": true,
          "description": "Füllwörter wie 'äh', 'ähm', 'also' automatisch entfernen"
        },
        "voiceDocs.useJSDoc": {
          "type": "boolean",
          "default": true,
          "description": "JSDoc-Format für JavaScript/TypeScript Funktionen verwenden"
        },
        "voiceDocs.aiTemperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "AI Kreativität (0 = deterministisch, 1 = kreativ)"
        },
        "voiceDocs.autoOpenBrowser": {
          "type": "boolean",
          "default": true,
          "description": "Browser automatisch öffnen beim Start der Sprachaufnahme"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf out",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "openai": "^4.56.0",
    "ws": "^8.16.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Diese Extension benötigt Zugriff auf lokale Server und API Keys"
    }
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/VS%20Code-1.85%2B-blue",
      "href": "https://code.visualstudio.com/",
      "description": "Minimum VS Code version"
    },
    {
      "url": "https://img.shields.io/badge/AI-GPT%20%26%20Claude-green",
      "href": "https://openai.com/",
      "description": "AI-powered documentation"
    }
  ],
  "__metadata": {
    "publisherDisplayName": "Azad Ahmed",
    "installedTimestamp": 1700000000000
  }
}
